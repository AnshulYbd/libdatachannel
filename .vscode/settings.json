{
    "git.suggestSmartCommit": false,
    "hexeditor.columnWidth": 16,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",
    "redhat.telemetry.enabled": true,
    "cmake.configureOnOpen": true,
    "security.workspace.trust.untrustedFiles": "open",
    "files.eol": "\r\n",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "explorer.confirmDelete": false,
    "terminal.integrated.env.windows": {
        "PATH": "${env:PATH};${workspaceFolder}/BuildTools/cmake-3.24-win/bin;"
    },
    "git.openRepositoryInParentFolders": "never",
    
    // https://vector-of-bool.github.io/docs/vscode-cmake-tools/settings.html#cmake-cmakepath    
    "cmake.buildDirectory": "${workspaceFolder}/cmake_win_build_release",
    "cmake.cmakePath": "${workspaceFolder}/BuildTools/cmake-3.24-win/bin/cmake.exe",
    "cmake.configureEnvironment" :{
        "GCC_NAME": "gcc-arm-10.3-2021.07-mingw-w64-i686-arm-none-linux-gnueabihf",
    },
    "cmake.generator": "Unix Makefiles",
    "files.associations": {
